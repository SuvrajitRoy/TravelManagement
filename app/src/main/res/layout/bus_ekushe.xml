<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="16dp"
    android:background="#FFF8DC">
    <RelativeLayout android:id="@+id/layout1"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="#BA55D3">
        <TextView android:id="@+id/tv1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="		Ticket Price:
            						320Tk"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </RelativeLayout>
    
    <View android:id="@+id/view1"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/layout1"/>
    
    <RelativeLayout android:id="@+id/layout2"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:background="#00FA9A"
        android:layout_below="@id/view1">
        
        <TextView android:id="@+id/tv2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="	Schedule:"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <TextView android:id="@+id/tv3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="4am to 11pm (Every 20min Bus dispatched from Noakhali)"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@id/tv2"/>
        <TextView android:id="@+id/tv4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="7am to 11pm  (Every 20min Bus dispatched from Dhaka)"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@id/tv3"/>
    </RelativeLayout>
     <View android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/layout2"/>
     
     <RelativeLayout android:id="@+id/layout3"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:background="#7B68EE"
        android:layout_below="@id/view2">
        <TextView android:id="@+id/tv5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Noakhali Counter Number:"
            			
            android:textColor="#000000"
            android:textSize="20sp"/>
        <Button android:id="@+id/call1"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:text="01678047365"
            android:textColor="#FFFAF0"
            android:textSize="20sp"
            android:layout_below="@id/tv5"
            android:background="#800000"
            android:onClick="call1"
            />
        <Button android:id="@+id/call2"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:text="01839942829"
            android:textColor="#FFFAF0"
            android:textSize="20sp"
            android:layout_below="@id/call1"
            android:background="#A0522D"
            android:onClick="call2"
            />
        <TextView android:id="@+id/tv6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Dhaka Counter Number:"
            			
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@id/call2"/>
        <Button android:id="@+id/call3"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:text="01678022855"
            android:textColor="#FFFAF0"
            android:textSize="20sp"
            android:layout_below="@id/tv6"
            android:background="#A0522D"
            android:onClick="call3"
            />
        <Button android:id="@+id/call4"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:text="01678047383"
            android:textColor="#FFFAF0"
            android:textSize="20sp"
            android:layout_below="@id/call3"
            android:background="#800000"
            android:onClick="call4"
            />
    </RelativeLayout>
    

</RelativeLayout>