  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="16dp"
    android:background="#FFF8DC">
    <RelativeLayout android:id="@+id/layout1"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:background="#BA55D3">
        <TextView android:id="@+id/tvS1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" Ticket Price: \n 1st Class Chair 45 Tk \n 1st Class Shovon 35 Tk"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </RelativeLayout>
    
    <View android:id="@+id/viewS1"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/layout1"/>
    
    <RelativeLayout android:id="@+id/layout2"
        android:layout_height="160dp"
        android:layout_width="match_parent"
        android:background="#00FA9A"
        android:layout_below="@id/viewS1">
        
        <TextView android:id="@+id/tvS2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="	Schedule:\n From Laksham To Noakhali : \n\n Departure Time - 6:00 PM\n Arrival Time - 08:00 PM  "
            android:textColor="#000000"
            android:textSize="20sp"/>
       
   
    </RelativeLayout>
     
     <View android:id="@+id/viewS2"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/layout2"/>
    
    <RelativeLayout android:id="@+id/layout3"
        android:layout_height="160dp"
        android:layout_width="match_parent"
        android:background="#00eA8b"
        android:layout_below="@id/viewS2">
        
        <TextView android:id="@+id/tvS3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="	Schedule:\n From Noakhali To Laksham : \n\n Departure Time - 08:15 AM \n Arrival Time - 09:45 AM "
            android:textColor="#000000"
            android:textSize="20sp"/>
       
   
    </RelativeLayout>
     
     
</RelativeLayout>

