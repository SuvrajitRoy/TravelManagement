  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="16dp"
    android:background="#FFF8DC">
    <RelativeLayout android:id="@+id/layout1"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:background="#BA55D3">
        <TextView android:id="@+id/tvN1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" Ticket Price: \n 1st Class Chair 250 Tk \n 1st Class Shovon 210 Tk"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </RelativeLayout>
    
    <View android:id="@+id/viewN1"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/layout1"/>
    
    <RelativeLayout android:id="@+id/layout2"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:background="#00FA9A"
        android:layout_below="@id/viewN1">
        
        <TextView android:id="@+id/tvN2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="	Schedule:\n\n From Dhaka To Noakhali : \n\n Departure Time - 8:10 PM 
                              \n Arrival Time - 7:00 AM "
            android:textColor="#000000"
            android:textSize="20sp"/>
       
   
    </RelativeLayout>
     
     
</RelativeLayout>

