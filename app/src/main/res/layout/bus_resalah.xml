    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="16dp"
    android:background="#FFF8DC">
    <RelativeLayout android:id="@+id/layout1"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="#BA55D3">
        <TextView android:id="@+id/tvR1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="		Ticket Price:
            						200Tk"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </RelativeLayout>
    
    <View android:id="@+id/viewR1"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/layout1"/>
    
    <RelativeLayout android:id="@+id/layout2"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:background="#00FA9A"
        android:layout_below="@id/viewR1">
        
        <TextView android:id="@+id/tvR2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="	Schedule:"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <TextView android:id="@+id/tvR3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="4am to 11pm (Every 30min Bus dispatched from Noakhali)"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@id/tvR2"/>
        <TextView android:id="@+id/tvR4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="7am to 11pm  (Every 30min Bus dispatched from Chittagong)"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@id/tvR3"/>
    </RelativeLayout>
     <View android:id="@+id/viewR2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/layout2"/>
     
     <RelativeLayout android:id="@+id/layout3"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:background="#7B68EE"
        android:layout_below="@id/viewR2">
        <TextView android:id="@+id/tvR5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Noakhali Counter Number:"
            			
            android:textColor="#000000"
            android:textSize="20sp"/>
        <Button android:id="@+id/callR1"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:text="01818958749"
            android:textColor="#FFFAF0"
            android:textSize="20sp"
            android:layout_below="@id/tvR5"
            android:background="#800000"
            android:onClick="callR1"
            />
        
        <TextView android:id="@+id/tvR6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Chittagong Counter Number:"
            			
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@id/callR1"/>
        <Button android:id="@+id/callR2"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:text="01816707750"
            android:textColor="#FFFAF0"
            android:textSize="20sp"
            android:layout_below="@id/tvR6"
            android:background="#A0522D"
            android:onClick="callR2"
            />
        
    </RelativeLayout>
    

</RelativeLayout>

