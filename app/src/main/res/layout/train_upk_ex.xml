  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="16dp"
    android:background="#FFF8DC">
    <RelativeLayout android:id="@+id/layout1"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:background="#BA55D3">
        <TextView android:id="@+id/tvD1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" Ticket Price:\n 1st Class Chair 250 Tk \n 1st Class Shovon 210 Tk"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </RelativeLayout>
    
    <View android:id="@+id/viewD1"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/layout1"/>
    
    <RelativeLayout android:id="@+id/layout2"
        android:layout_height="170dp"
        android:layout_width="match_parent"
        android:background="#00FA9A"
        android:layout_below="@id/viewD1">
        
        <TextView android:id="@+id/tvD2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="	Schedule:\n From Noakhali To Dhaka  : \n\n Departure Time - 06:10 AM\n Arrival Time - 01:30 PM\n The train is stopped in Wednesday "
            android:textColor="#000000"
            android:textSize="20sp"/>
       
   
    </RelativeLayout>
     
     <View android:id="@+id/viewD2"
        android:layout_width="300dp"
        android:layout_height="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/layout2"/>
    
    <RelativeLayout android:id="@+id/layout3"
        android:layout_height="170dp"
        android:layout_width="match_parent"
        android:background="#00eA8b"
        android:layout_below="@id/viewD2">
        
        <TextView android:id="@+id/tvD3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="	Schedule:\n From Dhaka To Noakhali :\n\n Departure Time - 03:20 PM\n Arrival Time - 10:00 PM\n The train is stopped in Wednesday  "
            android:textColor="#000000"
            android:textSize="20sp"/>
       
   
    </RelativeLayout>
     
     
     
</RelativeLayout>

